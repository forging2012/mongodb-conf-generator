#进程
processManagement:
    fork: true
    pidFilePath: #basedir#/cfg/#node#/cfg.pid
    
    
#网络
net:
    bindIp: #bindIp#
    port: #port#
    
    
#存储
storage:
    dbPath: #basedir#/cfg/#node#/data
    journal:
        enabled: true
    directoryPerDB: true
    syncPeriodSecs: 60
    engine: wiredTiger
    wiredTiger:
        engineConfig:
            statisticsLogDelaySecs: 0
            journalCompressor: snappy
            directoryForIndexes: true
        collectionConfig:
            blockCompressor: snappy
        indexConfig:
            prefixCompression: true
            
            
#日志
systemLog:
    destination: file
    path: #basedir#/cfg/#node#/log/cfg.log
    logAppend: true
    verbosity: 0
    
    
#操作
operationProfiling:
    slowOpThresholdMs: 100
    mode: slowOp
    
    
#分片
sharding:
    clusterRole: configsvr
